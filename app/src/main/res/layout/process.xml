<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000">

        <RelativeLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Get Followers"
                android:textColor="#ffff"
                android:textSize="18sp" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adView226"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp" >
        <LinearLayout
            android:gravity="center"
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </RelativeLayout>
    <TextView
        android:background="@drawable/textshape"
        android:gravity="center"
        android:id="@+id/ratemessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:text="Please confirm your fan request by giving 5star rating with your username mentioned. 
 Note: Rating the app is not mandatory but you should click GET FANS button after 48 hours"
        android:textColor="#000"
        android:textSize="15sp" />

    <Button
        android:background="@drawable/buttonshape"
        android:id="@+id/button_rating"
        android:layout_below="@+id/ratemessage"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:text="Rate now"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:background="@drawable/buttonshape3"
        android:id="@+id/button_process"
        android:layout_below="@+id/button_rating"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:text="Get Fans"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:background="@drawable/buttonshape2"
        android:gravity="center"
        android:id="@+id/message"
        android:layout_below="@+id/button_process"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="Successfully processed ,Wait for few hours to get new fans. 
 Thanks for using our app."
        android:textColor="#fff"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:id="@id/info"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:textColor="#000"
        android:text="Press 'Get Fans' to Process your order"
        android:textSize="15sp" />
</RelativeLayout>
